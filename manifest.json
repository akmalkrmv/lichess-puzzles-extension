{
  "manifest_version": 3,
  "name": "Lichess Puzzle Collector",
  "description": "Automates collecting unsolved puzzles on Lichess",
  "version": "1.1.0",
  "permissions": ["tabs", "activeTab", "storage", "sidePanel", "downloads"],
  "host_permissions": ["https://lichess.org/*"],
  "background": {
    "service_worker": "dist/background.js",
    "scripts": ["dist/background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://lichess.org/racer/*"],
      "js": ["dist/content/content_racer.js"]
    },
    {
      "matches": ["https://lichess.org/storm/*"],
      "js": ["dist/content/content_storm.js"]
    },
    {
      "matches": ["https://lichess.org/training/*"],
      "js": ["dist/content/content_training.js"]
    }
  ],
  "action": {
    "default_title": "Lichess Puzzle Collector",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  }
}
